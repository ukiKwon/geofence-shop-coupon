<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD700">

<!--
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view_gps"
        android:layout_width="179dp"
        android:layout_height="129dp"
        android:layout_above="@+id/intro_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="105dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="57dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading_gps4" />

    <!-- 로고 그림 -->
    <ImageView
        android:id="@+id/logo_geoshop"
        android:layout_width="284dp"
        android:layout_height="285dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="140dp"
        android:src="@drawable/logo_geoshop_no_head" />
    <!-- 로고 글자 -->
    <ImageView
        android:id="@+id/intro_text"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="132dp"
        android:src="@drawable/logo_geoshop_name"
        app:layout_constraintTop_toBottomOf="@+id/logo_geoshop" />
</RelativeLayout>